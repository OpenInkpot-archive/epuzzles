images {
    image, "puzzle_bg.png" COMP;
}

styles {
    style {
        name, "field_style";
        base, "font=sans-serif font_size=20 align=center valign=middle color=#000 wrap=word";
        tag,"cursor" "+style=underline underline_color=#000 underline_color=#000";
        tag, "/cursor" "-";
    }
    style {
        name, "help_style";
        base, "font=sans-serif font_size=20 align=center valign=middle color=#000 wrap=word";
    }
}

collections {
    group {
        name, "epuzzle";
        parts {
            part {
                name, "epuzzle/bg";
                type, RECT;
                description {
                    state, "default" 0.0;
                    color, 255 255 255 255;
                    rel1 { relative, 0.0 0.0; offset, 0 0; }
                    rel2 { relative, 1.0 1.0; offset, -1 -1; }
                }
            }
            part {
                name, "epuzzle/image";
                type, IMAGE;
                mouse_events, 0;
                description {
                    state, "default" 0.0;
                    rel1 { relative, 0.0 0.0; offset, 0 0; to, "epuzzle/bg"; }
                    rel2 { relative, 1.0 1.0; offset, 0 0; to, "epuzzle/bg"; }
                    image {
                        normal, "puzzle_bg.png";
                    }
                }
            }
            part {
                name, "epuzzle/title";
                type, TEXT;
                mouse_events, 0;
                description {
                    state, "default" 0.0;
                    color, 0 0 0 255;
                    text {
                        font, "sans-serif";
                        size, 23;
                        text, "Puzzles";
                    }
                    rel1 { relative, 0.0 0.0; offset, 11 38; to, "epuzzle/image"; }
                    rel2 { relative, 0.0 0.0; offset, 590 60; to, "epuzzle/image"; }
                    align, 0.0 0.0;
                }
            }
            part {
               name, "epuzzle/drawable";
               type, SWALLOW;
               description {
                  state, "default" 0.0;
                  rel1 { relative, 0.0 0.0; offset, 80 100; }
                  rel2 { relative, 0.0 0.0; offset, 520 540; }
               }
            }
            part {
                name, "epuzzle/help";
                type, TEXTBLOCK;
                multiline, 1;
                mouse_events, 0;
                description {
                    state, "default" 0.0;
                    color, 0 0 0 255;
                    text {
                        style, "help_style";
                        max, 0 1;
                        text, "";
                    }
                    align, 0.0 0.9;
                    rel1 { relative, 0.0 1.0; offset, 200 -45; to, "epuzzle/image"; }
                    rel2 { relative, 0.0 1.0; offset, 580 -15; to, "epuzzle/image"; }
                }
            }
       }
    }
}
